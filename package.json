{
  "name": "ts-lib-template",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint .",
    "test": "jest",
    "all": "yarn run build && yarn run format && yarn run lint && yarn test",
    "dependency-upgrade": "yarn upgrade && yarn run all"
  },
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@types/node": "^18.16.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "ava": "^5.2.0",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "build/"
      },
      "compile": false,
      "extensions": [
        "ts"
      ],
      "nodeArguments": [
        "--loader=ts-node/esm"
      ]
    }
  }
}
